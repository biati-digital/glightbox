{
  "name": "@glightbox/monorepo",
  "description": "",
  "version": "0.0.0",
  "author": "Biati Digital",
  "scripts": {
    "prepare": "npm run build --workspaces --if-present",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint ./packages --ext .ts",
    "lint:styles": "stylelint './**/*.css' --allow-empty-input",
    "build": "npm run build --workspaces --if-present",
    "watch": "npm run watch --workspaces --if-present",
    "change:beta": "changeset pre enter beta",
    "change:exit": "changeset pre exit",
    "change": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "clean": "find ./packages -name 'dist' -type d -exec rm -rf {} + && find ./packages -name 'tsconfig.tsbuildinfo' -type f -exec rm -rf {} +"
  },
  "workspaces": [
    "packages/utils",
    "packages/glightbox",
    "packages/plugin-core",
    "packages/drag-navigation",
    "packages/keyboard-navigation",
    "packages/image",
    "packages/video"
  ],
  "private": true,
  "license": "GPLV3",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "stylelint": "^16.2.1",
    "stylelint-config-recommended": "^14.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2",
    "vite": "^5.1.6",
    "vite-plugin-dts": "^4.2.1",
    "vite-plugin-static-copy": "^1.0.1"
  }
}
